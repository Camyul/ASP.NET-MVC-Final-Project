@using TelerikAcademy.FinalProject.Web.Models.Home
@model ProductViewModel

<div class="col-lg-3 col-md-6 col-sm-12">
    <img class="product-img" src="@Model.PictureUrl" />
    <h2>@Model.Name</h2>
    <p>@Model.Description</p>
    <p>@Html.ActionLink("Go To Details", "Details", "Products", new { id = Model.Id }, null)</p>
    <h4>@string.Format("{0}€.", Model.Price)</h4>
</div>

